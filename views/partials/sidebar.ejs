    <!-- Menu untuk Admin -->
    <% if (userRole === 'admin') { %>
    <li>
      <a href="/admin/gedung/tambah" class="nav-link text-white">
        <i class="fas fa-plus-circle me-2"></i>
        Tambah Gedung
      </a>
    </li>
    <li>
      <a href="/admin/gedung" class="nav-link text-white">
        <i class="fas fa-table me-2"></i>
        Data Gedung
      </a>
    </li>
    <% } %>

    <!-- Menu untuk Kepala Gedung -->
    <% if (userRole === 'kepala_gedung') { %>
    <li>
      <a href="/kepala-gedung/dashboard" class="nav-link text-white">
        <i class="fas fa-check-double me-2"></i>
        Validasi Pesanan
      </a>
    </li>
    <% } %>
  </ul>
  <hr />
  <!-- Dropdown di sidebar akan di-handle oleh navbar -->
</div>
